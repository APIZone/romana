[Unit]
Description=Romana Cloud Native Networking Root Service
Documentation=https://github.com/romana/core

[Service]
#User=...
EnvironmentFile=-{{ romana_etc_dir }}/root
ExecStart=/bin/bash -c '{{ romana_bin_dir }}/root -c {{ romana_etc_dir }}/romana.conf.yml &>> {{ romana_log_dir }}/core.log'
KillMode=control-group
Restart=on-failure
StartLimitInterval=180s
StartLimitBurst=10
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
