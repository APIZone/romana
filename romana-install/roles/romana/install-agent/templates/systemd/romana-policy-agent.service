[Unit]
Description=Romana Cloud Native Network Policy Agent Service
Documentation=https://github.com/romana/core

[Service]
#User=...
EnvironmentFile=-{{ romana_etc_dir }}/agent
ExecStart=/bin/bash -c '{{ romana_bin_dir }}/agent.py &>> {{ romana_log_dir }}/policy-agent.log'
KillMode=control-group
Restart=on-failure
StartLimitInterval=180s
StartLimitBurst=10
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
